<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivCommentAuthorPhoto"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment Author"
        android:id="@+id/tvCommentAuthor"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivCommentAuthorPhoto"
        android:layout_toEndOf="@+id/ivCommentAuthorPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comment text"
        android:id="@+id/tvCommentText"
        android:layout_below="@+id/tvCommentAuthor"
        android:layout_toRightOf="@+id/ivCommentAuthorPhoto"
        android:layout_toEndOf="@+id/ivCommentAuthorPhoto"
        android:layout_marginTop="5dp"/>

</RelativeLayout>